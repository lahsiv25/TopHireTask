    <style name="customTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/et_fill_color</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/font_500_12</item>
        <item name="errorTextColor">@color/et_stroke_error</item>
        <item name="boxStrokeColor">@color/et_stroke_focused_color</item>
        <item name="boxStrokeErrorColor">@color/et_stroke_error</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="passwordToggleTint">@color/toggle_icon</item>
    </style>
